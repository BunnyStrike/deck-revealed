{
  "name": "revealed",
  "private": false,
  "license": "GPL-3.0-only",
  "description": "A app and game manager for Steam Deck, Epic, GOG, and more.",
  "repository": {
    "type": "Github",
    "url": "https://github.com/BunnyStrike/revealed"
  },
  "author": {
    "name": "BunnyStrike",
    "email": "support@bunnystrike.com"
  },
  "engines": {
    "node": ">=v18.11.0"
  },
  "packageManager": "pnpm@8.2.0",
  "scripts": {
    "build": "turbo build",
    "clean": "git clean -xdf node_modules",
    "clean:workspaces": "turbo clean",
    "db:generate": "turbo db:generate",
    "db:stage:generate": "turbo db:stage:generate",
    "db:push": "turbo db:push db:push",
    "db:stage:push": "turbo db:push db:stage:push",
    "dist:flatpak": "turbo dist:flatpak",
    "release:linux": "turbo release:linux",
    "dist:linux": "turbo dist:linux",
    "dev": "turbo dev --parallel --concurrency=20",
    "format": "prettier --write \"**/*.{js,cjs,mjs,ts,tsx,md,json}\" --ignore-path .gitignore",
    "lint": "turbo lint && manypkg check",
    "lint:fix": "turbo lint:fix && manypkg fix",
    "type-check": "turbo type-check",
    "postinstall": "pnpm db:generate"
  },
  "dependencies": {
    "@ianvs/prettier-plugin-sort-imports": "^3.7.2",
    "@manypkg/cli": "^0.20.0",
    "@revealed/eslint-config": "^0.1.0",
    "@types/prettier": "^2.7.2",
    "@vitejs/plugin-react": "^3.1.0",
    "eslint": "^8.38.0",
    "node-gyp-build": "^4.6.0",
    "prettier": "^2.8.7",
    "prettier-plugin-tailwindcss": "^0.2.7",
    "turbo": "^1.9.1",
    "typescript": "^5.0.4",
    "vite-plugin-svgr": "^2.4.0"
  }
}
