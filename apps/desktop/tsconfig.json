{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "baseUrl": ".",
    "target": "es2021",
    "lib": ["esnext", "dom", "dom.iterable", "WebWorker"],
    "paths": {
      "~/*": ["./src/*"],
      "frontend/*": ["./src/frontend/*"],
      "backend/*": ["./src/backend/*"],
      "common/*": ["./src/common/*"]
    },
    "types": [],
    "typeRoots": ["./node-modules/@types"]
  },
  "include": ["src", "*.ts", "**/*.js"],
  "exclude": [
    "vite.config.ts",
    "**/__tests__/**",
    "**/__mocks__/**",
    "node_modules"
  ]
}
